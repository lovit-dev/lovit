{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "paths": {
      "@package/*": ["./package/src/*"]
    }
  },
  "include": ["site/vite.config.ts", "vitest.config.ts", "eslint.config.ts", "package/tsup.config.ts", "test"]
}
